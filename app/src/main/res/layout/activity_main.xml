<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:text="Selecionar Cidades"
                android:onClick="FilterCities"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </Button>
        </LinearLayout>

        <Button
            android:onClick="FilterCities"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Pesquisar"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight= "5"
        android:orientation="vertical">

        <ListView
            android:id="@+id/weather_list"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:layout_height="match_parent">
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight= ".5"

        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/radio_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:checked="true"
                android:id="@+id/radio_none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="none"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/radio_3itm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 cities"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/radio_5itm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 cities"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/radio_10itm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 cities"
                android:onClick="onRadioButtonClicked"/>



        </RadioGroup>

    </LinearLayout>


</LinearLayout>
